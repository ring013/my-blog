---
// src/components/BlogList.astro
import type { Post } from '../types';

interface Props {
  posts: Post[];
}

const { posts } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<section class="blog-posts">
  <div class="post-grid">
    {posts.map((post) => (
      <article class="post-card fade-in">
        <a href={`${base}blog/${post.slug}`}>
          <img
            src={`${base}${post.data.image ?? 'images/img-test.png'}`}
            alt={post.data.title}
          />
          <h2>{post.data.title}</h2>
          <p>{post.data.description}</p>
        </a>
      </article>
    ))}
  </div>
</section>

<style>
  .blog-posts {
    padding: 2rem;
  }

  .post-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .post-card {
    background: #fff;
    border: 1px solid #eee;
    border-radius: 12px;
    padding: 1rem;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
    transition: transform 0.2s ease;
  }

  .post-card:hover {
    transform: translateY(-5px);
  }

  .post-card img {
    width: 100%;
    height: auto;
    border-radius: 8px;
  }

  .post-card h2 {
    margin-top: 0.75rem;
    font-size: 1.25rem;
    color: #333;
  }

  .post-card p {
    font-size: 1rem;
    color: #666;
  }
</style>
