---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import KeyVisual from '../components/KeyVisual.astro';

const posts = await getCollection('blog');
---

<BaseLayout title="ギラのスタバ風ブログ">
  <KeyVisual />

  <!-- 他のセクション（例：記事一覧など） -->
</BaseLayout>


<style>
  .blog-section {
    margin-top: 4rem;
    padding: 0 1rem;
  }

  .blog-section h2 {
    font-size: 1.8rem;
    margin-bottom: 1.5rem;
    color: #1e3932;
  }

  .featured-posts {
    display: flex;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    -webkit-overflow-scrolling: touch;
    gap: 1.5rem;
    padding-bottom: 1rem;
  }

  .featured-posts::-webkit-scrollbar {
    height: 8px;
  }

  .featured-posts::-webkit-scrollbar-thumb {
    background-color: rgba(0, 0, 0, 0.3);
    border-radius: 4px;
  }

  .card {
    flex: 0 0 auto;
    scroll-snap-align: start;
    width: 280px;
    background-color: #fff;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    text-decoration: none;
    color: inherit;
    transition: transform 0.3s ease;
  }

  .card:hover {
    transform: translateY(-4px);
  }

  .card img {
    width: 100%;
    height: 160px;
    object-fit: cover;
  }

  .overlay {
    padding: 1rem;
  }

  .overlay h3 {
    font-size: 1.1rem;
    margin: 0.5rem 0;
  }

  .meta {
    font-size: 0.85rem;
    color: #666;
  }

  .tag {
    font-size: 0.75rem;
    background-color: #1e3932;
    color: #fff;
    padding: 0.2rem 0.5rem;
    border-radius: 4px;
    display: inline-block;
  }
</style>
