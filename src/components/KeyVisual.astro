---
// src/components/KeyVisual.astro
---

<section class="kv-center">
  <div class="logo-box">
    <img src="/my-blog/images/Gira.png" alt="Giraのロゴ" class="kv-logo" />
    <div class="logo-text">
      <span style="--i:0">G</span>
      <span style="--i:1">i</span>
      <span style="--i:2">r</span>
      <span style="--i:3">a</span>
      <span style="--i:4">’</span>
      <span style="--i:5">s</span>
      <span style="--i:6">&nbsp;</span>
      <span style="--i:7">B</span>
      <span style="--i:8">l</span>
      <span style="--i:9">o</span>
      <span style="--i:10">g</span>
    </div>
  </div>

  <div class="scroll-indicator">
    <span class="scroll-text">Scroll</span>
    <div class="arrow"></div>
  </div>
</section>


<style>
@import url('https://fonts.googleapis.com/css2?family=Dancing+Script:wght@600&display=swap');

.kv-center {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  min-height: 60vh;
  padding-top: 15rem;
  padding-bottom: 1rem;
  text-align: center;
  position: relative;
  background-color: #fff;
}

.logo-box {
  display: flex;
  align-items: flex-end;
  gap: 1rem;
}

.kv-logo {
  width: 220px;
  height: auto;
  opacity: 0;
  transform: scale(0.8);
  animation: logoFadeIn 2s ease-out forwards;
}

.logo-text {
  display: flex;
  gap: 3px;
  font-family: 'Dancing Script', cursive;
  font-size: 1.8rem;
  font-weight: 600;
  line-height: 1.2;
  color: #333;
}

.logo-text span {
  display: inline-block;
  opacity: 0;
  animation: letterFade 0.3s ease-out forwards;
  animation-delay: calc(var(--i) * 0.2s + 2.2s);
}

@keyframes letterFade {
  from {
    opacity: 0;
    transform: translateY(-10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes logoFadeIn {
  from {
    opacity: 0;
    transform: scale(0.8);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

.scroll-indicator {
  position: absolute;
  bottom: 2rem;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #777;
  font-size: 0.9rem;
  animation: fadein 2s ease-in-out;
}

.scroll-text {
  margin-bottom: 0.5rem;
  letter-spacing: 1px;
  animation: floatFade 2.5s ease-in-out infinite;
}

.arrow {
  width: 16px;
  height: 16px;
  border-bottom: 2px solid #999;
  border-right: 2px solid #999;
  transform: rotate(45deg);
  animation: floatFade 2.5s ease-in-out infinite;
}

@keyframes floatFade {
  0% {
    opacity: 0;
    transform: rotate(45deg) translateY(0);
  }
  50% {
    opacity: 1;
    transform: rotate(45deg) translateY(8px);
  }
  100% {
    opacity: 0;
    transform: rotate(45deg) translateY(0);
  }
}

@keyframes fadein {
  from { opacity: 0; }
  to { opacity: 1; }
}
</style>
