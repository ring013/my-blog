---
// src/components/ArticleGrid.astro
interface Props {
  posts: any[];
  categoryName?: string;
}

const { posts, categoryName } = Astro.props;
---

<div class="article-grid">
  {posts.map((post) => (
    <a href={`/blog/${post.slug}`} class="article-link">
      <article class="article-card">
        <img src={post.data.image || '/images/img-test.png'} alt={post.data.title} />
        <div class="article-card-content">
          <p class="meta">
            <span class="category">{categoryName ?? post.data.category}</span>
            <time class="date" datetime={post.data.date.toISOString()}>
              {post.data.date.toLocaleDateString('ja-JP')}
            </time>
          </p>
          <h3>{post.data.title}</h3>
        </div>
      </article>
    </a>
  ))}
</div>

<style>
  .article-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 25px;
    margin: 30px 4vw;
  }

  .article-link {
    display: block;
  }

  .article-card {
    overflow: hidden;
    display: flex;
    flex-direction: column;
    background-color: #fff;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease;
  }

  .article-card:hover {
    transform: translateY(-4px);
  }

  .article-card img {
    width: 100%;
    aspect-ratio: 16 / 9;
    object-fit: cover;
  }

  .article-card-content {
    padding: 1rem;
  }

  .meta {
    font-size: 0.85rem;
    color: #666;
    margin-bottom: 0.5rem;
  }

  .category {
    font-size: 0.8rem;
    background-color: #1e3932;
    color: white;
    padding: 0.2rem 0.5rem;
    border-radius: 4px;
    margin-right: 0.5rem;
  }

  .date {
    color: #666;
  }

  h3 {
    font-size: 1.2rem;
    margin: 0;
    color: #333;
  }
</style>
