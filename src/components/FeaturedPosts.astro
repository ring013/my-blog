---
// src/components/FeaturedPosts.astro
interface Props {
  posts: any[];
}

const { posts } = Astro.props;
---

<section class="featured-section">
  <h2>注目の記事</h2>
  <div class="featured-posts">
    {posts.map((post) => (
      <a href={`/blog/${post.slug}`} class="card">
        <img src={post.data.image || '/images/img-test.png'} alt={post.data.title} />
        <div class="overlay">
          <h3>{post.data.title}</h3>
          <p class="meta">
            <span class="tag">{post.data.category}</span>
            <time class="date" datetime={post.data.date.toISOString()}>
              {post.data.date.toLocaleDateString('ja-JP')}
            </time>
          </p>
        </div>
      </a>
    ))}
  </div>
</section>

<style>
  .featured-section {
    margin: 4rem 0;
    padding: 0 1rem;
  }

  .featured-section h2 {
    font-size: 1.8rem;
    color: #1e3932;
    margin-bottom: 1.2rem;
  }

  .featured-posts {
    display: flex;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    gap: 1.5rem;
    padding-bottom: 1rem;
    -webkit-overflow-scrolling: touch;
  }

  .card {
    flex: 0 0 auto;
    scroll-snap-align: start;
    width: 280px;
    background: white;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    text-decoration: none;
    color: inherit;
    transition: transform 0.3s ease;
  }

  .card:hover {
    transform: translateY(-4px);
  }

  .card img {
    width: 100%;
    height: 160px;
    object-fit: cover;
  }

  .overlay {
    padding: 1rem;
  }

  .overlay h3 {
    font-size: 1.1rem;
    margin: 0.5rem 0;
  }

  .meta {
    font-size: 0.85rem;
    color: #666;
  }

  .tag {
    font-size: 0.75rem;
    background-color: #1e3932;
    color: #fff;
    padding: 0.2rem 0.5rem;
    border-radius: 4px;
    display: inline-block;
    margin-right: 0.5rem;
  }
</style>
