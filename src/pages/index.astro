---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import KeyVisual from '../components/KeyVisual.astro';

const posts = await getCollection('blog');
---

<BaseLayout title="ギラのスタバ風ブログ">
  <KeyVisual />

  <h2>注目の記事</h2>
  <div class="featured-posts">
    {posts.slice(0, 3).map((post) => {
      const { title, date, image } = post.data;

      return (
        <a href={`/blog/${post.slug}/`} class="card">
          <img src={image ?? '/blog-placeholder-1.jpg'} alt="アイキャッチ" />
          <div class="overlay">
            <span class="tag">Coding</span>
            <h3>{title}</h3>
            <p class="meta">
              {new Date(date).toLocaleDateString("ja-JP", {
                year: "numeric",
                month: "2-digit",
                day: "2-digit",
              })}
            </p>
          </div>
        </a>
      );
    })}
  </div>

  <style>
    h2 {
      text-align: center;
      color: #00704A;
      font-size: 1.6rem;
      margin-top: 2rem;
    }

    .featured-posts {
      display: flex;
      gap: 1.5rem;
      overflow-x: auto;
      padding: 1rem;
      scroll-snap-type: x mandatory;
    }

    .card {
      flex: 0 0 300px;
      scroll-snap-align: start;
      position: relative;
      border-radius: 16px;
      overflow: hidden;
      background: #000;
      color: #fff;
      box-shadow: 0 6px 20px rgba(0, 0, 0, 0.2);
      text-decoration: none;
    }

    .card img {
      width: 100%;
      height: 180px;
      object-fit: cover;
      filter: brightness(60%);
    }

    .overlay {
      position: absolute;
      bottom: 0;
      left: 0;
      width: 100%;
      padding: 1rem;
      box-sizing: border-box;
    }

    .tag {
      display: inline-block;
      background: #fff;
      color: #000;
      padding: 0.2rem 0.6rem;
      border-radius: 999px;
      font-size: 0.75rem;
      margin-bottom: 0.5rem;
    }

    .overlay h3 {
      font-size: 1.2rem;
      margin: 0 0 0.3rem;
    }

    .meta {
      font-size: 0.75rem;
      color: #ccc;
    }
  </style>
</BaseLayout>
