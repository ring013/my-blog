---
export interface Props {}
---

<header class="header">
  <div class="container">
    <div class="logo">
      <a href="/">Gira</a>
    </div>

    <button class="menu-toggle" id="menu-toggle" aria-label="メニューを開く">
      <span></span>
      <span></span>
      <span></span>
    </button>

    <nav class="nav-overlay" id="nav">
      <ul>
        <li><a href="/" class="nav-link" data-path="/">Home</a></li>
        <li><a href="/blog" class="nav-link" data-path="/blog">Blog</a></li>
        <li>
          <a href="/about" class="nav-link" data-path="/about">Profile</a>
        </li>
      </ul>
    </nav>
  </div>
</header>

<script is:inline>
  console.log("Header script loaded");

  window.addEventListener("DOMContentLoaded", () => {
    console.log("DOMContentLoaded!");

    const toggleButton = document.getElementById("menu-toggle");
    const navMenu = document.getElementById("nav");

    if (toggleButton && navMenu) {
      toggleButton.addEventListener("click", () => {
        console.log("Menu toggle clicked");
        toggleButton.classList.toggle("open");
        navMenu.classList.toggle("open");
        document.body.classList.toggle("no-scroll");
      });
    }

    const currentPath = window.location.pathname;
    document.querySelectorAll(".nav-link").forEach((link) => {
      if (link.getAttribute("data-path") === currentPath) {
        link.classList.add("active");
      }
    });
  });
</script>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    background-color: #fff;
    border-bottom: 1px solid #ccc;
    padding: 0.75rem 0;
    z-index: 1000;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
    font-family: inherit;
  }

  .container {
    max-width: 1024px;
    margin: 0 auto;
    padding: 0 1.5rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .logo a {
    font-family: "Dancing Script", cursive;
    font-size: 2rem;
    font-weight: bold;
    text-decoration: none;
    color: #1e3932;
  }

  .menu-toggle {
    display: none;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 1rem;
    height: 1rem;
    gap: 0.4rem;
    background: none;
    border: none;
    cursor: pointer;
    z-index: 2100;
  }

  .menu-toggle span {
    width: 2rem;
    height: 0.2rem;
    background-color: #1e3932;
    transition: all 0.3s ease;
  }

  .menu-toggle.open span:nth-child(1) {
    transform: rotate(45deg) translate(5px, 5px);
  }

  .menu-toggle.open span:nth-child(2) {
    opacity: 0;
  }

  .menu-toggle.open span:nth-child(3) {
    transform: rotate(-45deg) translate(5px, -5px);
  }

  .nav-overlay {
    display: flex;
  }

  .nav-overlay ul {
    display: flex;
    list-style: none;
    gap: 2rem;
    margin: 0;
    padding: 0;
  }

  .nav-overlay a {
    font-family: inherit;
    color: #1e3932;
    text-decoration: none;
    font-size: 1.1rem;
    font-weight: 500;
    position: relative;
    padding-bottom: 4px;
  }

  .nav-overlay a::after {
    content: "";
    position: absolute;
    left: 0;
    bottom: 0;
    width: 0%;
    height: 2px;
    background: rgba(30, 57, 50, 0.4);
    transition: width 0.3s ease;
  }

  .nav-overlay a:hover::after,
  .nav-overlay a.active::after {
    width: 100%;
  }

  @media (max-width: 1024px) {
    .menu-toggle {
      display: flex;
    }

    .nav-overlay {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100vh;
      background-color: rgba(255, 255, 255, 0.97);
      flex-direction: column;
      align-items: center;
      justify-content: center;
      padding: 3rem;
      z-index: 2000;
    }

    .nav-overlay.open {
      display: flex;
    }

    .nav-overlay ul {
      flex-direction: column;
      gap: 2rem;
    }
  }

  .no-scroll {
    overflow: hidden;
  }
</style>

